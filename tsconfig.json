{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react-native",
        "lib": ["es2017"],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "baseUrl": "./",
        "paths": {
            "@assets": ["src/assets"],
            "@assets*": ["src/assets/*"],
            "@components": ["src/components"],
            "@components*": ["src/components/*"],
            "@screens": ["src/screens"],
            "@navigation": ["src/navigation"],
            "@api": ["src/api"]
        }
    },
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ]
}
